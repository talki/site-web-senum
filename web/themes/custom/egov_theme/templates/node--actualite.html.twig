<!-- Breadcrumb -->
<div class="breadcrumb">
    <div class="breadcrumb-container">
        <a href="/">Accueil</a>
        <span>‚Ä∫</span>
        <a href="/actualites">Actualit√©s</a>
        <span>‚Ä∫</span>
        <span>{{ node.title.value }}</span>
    </div>
</div>

<!-- Article Header -->
<header class="article-header">
    <div class="article-header-content">
        {% if node.field_categorie.value %}
        <span class="article-category">
            {% if node.field_categorie.value == 'urgent' %}Urgent
            {% elseif node.field_categorie.value == 'nouveau' %}Nouveau
            {% elseif node.field_categorie.value == 'info' %}Information
            {% elseif node.field_categorie.value == 'annonce' %}Annonce
            {% else %}International
            {% endif %}
        </span>
        {% endif %}
        <h1 class="article-title">{{ node.title.value }}</h1>
        {% if node.field_extrait.value %}
        <p class="article-excerpt">
            {{ node.field_extrait.value }}
        </p>
        {% endif %}
        <div class="article-meta">
            <div class="meta-author">
                <div class="author-avatar">‚úçÔ∏è</div>
                <div>
                    <div class="author-name">Direction de la Communication MCTN</div>
                </div>
            </div>
            <div class="meta-item">
                <span>üìÖ</span>
                <span>{{ node.created.value|format_date('custom', 'd F Y', '', 'fr') }}</span>
            </div>
            {% if node.field_temps_lecture.value %}
            <div class="meta-item">
                <span>‚è±Ô∏è</span>
                <span>{{ node.field_temps_lecture.value }} min de lecture</span>
            </div>
            {% endif %}
            <div class="meta-item">
                <span>üëÅÔ∏è</span>
                <span>{{ random(1000, 5000) }} vues</span>
            </div>
        </div>
    </div>
</header>

<!-- Social Share Bar -->
<div class="social-share-bar">
    <div class="social-share-content">
        <span class="share-label">Partager cet article :</span>
        <div class="share-buttons">
            <button class="share-btn">
                <span>üìò</span>
                <span>Facebook</span>
            </button>
            <button class="share-btn">
                <span>üê¶</span>
                <span>Twitter</span>
            </button>
            <button class="share-btn">
                <span>üíº</span>
                <span>LinkedIn</span>
            </button>
            <button class="share-btn">
                <span>üìß</span>
                <span>Email</span>
            </button>
        </div>
    </div>
</div>

<!-- Featured Image -->
{% if node.field_image_actualite %}
<section class="featured-image-section">
    <div class="featured-image-container">
        {{ content.field_image_actualite }}
        <p class="image-caption">{{ node.title.value }}</p>
    </div>
</section>
{% endif %}

<!-- Main Content -->
<main class="article-main">
    <div class="article-container">
        
        <!-- Article Body -->
        <article class="article-body">
            <div class="article-content">
                {{ content.body }}
            </div>

            <!-- Article Footer -->
            <div class="article-footer">
                <div class="tags-section">
                    <div class="tags-title">üè∑Ô∏è Tags</div>
                    <div class="tags-list">
                        {% if node.field_categorie.value %}
                        <span class="tag">{{ node.field_categorie.value|capitalize }}</span>
                        {% endif %}
                        <span class="tag">Actualit√©</span>
                        <span class="tag">MCTN</span>
                        <span class="tag">S√©n√©gal</span>
                    </div>
