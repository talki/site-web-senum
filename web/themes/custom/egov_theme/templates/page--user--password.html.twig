{#
/**
 * @file
 * Theme override for the password reset page.
 */
#}
<!DOCTYPE html>
<html{{ html_attributes }}>
  <head>
    <head-placeholder token="{{ placeholder_token }}">
    <title>{{ head_title|safe_join(' | ') }}</title>
    <css-placeholder token="{{ placeholder_token }}">
    <js-placeholder token="{{ placeholder_token }}">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800;900&display=swap" rel="stylesheet">
    
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      
      body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        background: linear-gradient(135deg, #00853F 0%, #00A859 50%, #FCD116 100%);
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 2rem;
      }
      
      .password-reset-container {
        width: 100%;
        max-width: 500px;
        background: white;
        border-radius: 24px;
        padding: 3rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      }
      
      .reset-header {
        text-align: center;
        margin-bottom: 2.5rem;
      }
      
      .reset-icon {
        width: 80px;
        height: 80px;
        background: linear-gradient(135deg, #00853F, #00A859);
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 2.5rem;
        margin: 0 auto 1.5rem;
      }
      
      .reset-title {
        font-size: 1.8rem;
        font-weight: 900;
        color: #2C3E50;
        margin-bottom: 0.5rem;
      }
      
      .reset-subtitle {
        color: #7F8C8D;
        font-size: 0.95rem;
        line-height: 1.6;
      }
      
      .messages {
        margin-bottom: 1.5rem;
        padding: 1rem 1.5rem;
        border-radius: 12px;
        font-size: 0.9rem;
      }
      
      .messages.error {
        background: #FFEBEE;
        color: #E31B23;
        border-left: 4px solid #E31B23;
      }
      
      .messages.status {
        background: #E8F5E9;
        color: #00853F;
        border-left: 4px solid #00853F;
      }
      
      .form-item {
        margin-bottom: 1.5rem;
      }
      
      .form-item label {
        display: block;
        font-weight: 700;
        color: #2C3E50;
        margin-bottom: 0.5rem;
        font-size: 0.9rem;
      }
      
      .form-item input[type="text"],
      .form-item input[type="email"] {
        width: 100%;
        padding: 0.9rem 1.2rem;
        border: 2px solid #E5E7EB;
        border-radius: 12px;
        font-size: 1rem;
        font-family: inherit;
        transition: all 0.3s;
        background: #F9FAFB;
      }
      
      .form-item input:focus {
        outline: none;
        border-color: #00853F;
        background: white;
        box-shadow: 0 0 0 4px rgba(0,133,63,0.1);
      }
      
      .form-actions {
        margin-top: 2rem;
      }
      
      .form-submit {
        width: 100%;
        padding: 1rem 2rem;
        background: linear-gradient(135deg, #00853F, #00A859);
        color: white;
        border: none;
        border-radius: 12px;
        font-size: 1.05rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s;
        box-shadow: 0 4px 12px rgba(0,133,63,0.3);
      }
      
      .form-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 20px rgba(0,133,63,0.4);
      }
      
      .back-login {
        margin-top: 1.5rem;
        text-align: center;
      }
      
      .back-login a {
        color: #00853F;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9rem;
      }
      
      .back-login a:hover {
        text-decoration: underline;
      }
      
      .tabs, .region-breadcrumb {
        display: none !important;
      }
    </style>
  </head>
  <body>
    <div class="password-reset-container">
      <div class="reset-header">
        <div class="reset-icon">üîë</div>
        <h1 class="reset-title">Mot de passe oubli√© ?</h1>
        <p class="reset-subtitle">
          Entrez votre nom d'utilisateur ou email pour recevoir un lien de r√©initialisation
        </p>
      </div>
      
      {{ page.content }}
      
      <div class="back-login">
        <a href="/user/login">‚Üê Retour √† la connexion</a>
      </div>
    </div>
  </body>
</html>
